 <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.solumath.ncalc.view.MathFormulaView
            android:id="@+id/txt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:engine="KaTeX" />

        <com.solumath.ncalc.view.MathFormulaView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:engine="KaTeX" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <com.solumath.ncalc.view.CalcImageButton
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:textColor="?android:textColorPrimary"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_mode_edit_white_24dp"
                tools:visibility="visible" />

            <com.solumath.ncalc.view.CalcImageButton
                android:id="@+id/img_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:textColor="?android:textColorPrimary"
                app:srcCompat="@drawable/ic_delete_black_24dp" />

            <com.solumath.ncalc.view.CalcImageButton
                android:id="@+id/img_copy_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:textColor="?android:textColorPrimary"
                app:srcCompat="@drawable/ic_content_copy_white_24dp" />

            <com.solumath.ncalc.view.CalcImageButton
                android:id="@+id/img_share_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:textColor="?android:textColorPrimary"
                app:srcCompat="@drawable/ic_share_white_24dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
