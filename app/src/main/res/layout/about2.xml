<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/arriba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="SoluMath"
                    android:textAlignment="center"

                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:id="@+id/msjResultado"

                android:layout_margin="10dp"
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"

                android:text="Quien dijo que aprender deberia ser difícil, solamente necesitas un poco de tiempo y practica. 👀.\nApoya al desarrollador calificando positivamente la app y/o descargando otras apps de el mismo. ❤❤❤
 \n
\nEmail: kevinv.contacto@gmail.com

"

                android:textAlignment="center"
                android:textSize="15dp"


                app:layout_constraintBottom_toTopOf="@+id/botonvamo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Animacion" />

            <Button
                android:id="@+id/botonvamo"
                android:layout_width="234dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40dp"

                android:background="@drawable/btn_redondo"
                android:backgroundTint="#009688"
                android:text="Salir"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/Animacion"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arriba"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/developer"></com.airbnb.lottie.LottieAnimationView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>